<p>
<%= link_to "Back", project_items_path %> |
<%= link_to "New Item", new_project_item_path if User.current.allowed_to?(:create_items, @project) %>
</p>

<h2>Add Custom Field</h2>

<table>
<%= form_for :customfield, url: project_items_custom_fields_path do |f| %>
    <tr><td><%= f.label "Name:" %></td> <td><%= f.text_field :name, :required => true %></td></tr>
    <tr><td><%= f.label "Field format:" %></td><td> <%= f.select :field_format, options_for_select([["Boolean", 'boolean'],
                                                                                 ["Date", "date"],
                                                                                 ["Float", "float"],
                                                                                 ["Integer", "integer"],
                                                                                 ["Text", "text"],
                                                                                 ["String", "string"]]), { :include_blank => 'Select One' }, :required => true %></td></tr>
    <tr><td><%= f.label "Default value:" %></td> <td><%= f.text_field :default_value %></td></tr>
    <tr><td><%= f.submit 'Add Custom Field'%></td><td></td></tr>
<% end %>
</table>
